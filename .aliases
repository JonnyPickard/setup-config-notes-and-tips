# NOTE: turn off detault GIT zsh plugin

# Aliases
alias p="cd ~/projects"
alias b="cd .."
alias c="clear"

# Git Aliases
alias ga='git add' 
alias gc='git commit'
alias g.='git add .; git commit -m'
alias gs='git status'
alias gco="git checkout"

# Git branch - list sorted branches with last commit date, author and name
alias gb="git for-each-ref --sort=-committerdate refs/heads/ --format=$'\033[95m%(committerdate:relative)\033[0m | \033[94m%(authorname)\033[0m | %(refname:short)'"
#  Git history pretty
alias gl="git log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"

